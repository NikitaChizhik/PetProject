<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Properties>
		<Property name="log-path">/home/nikita/foxminded/Task9DomainLayer20/resources/log4j2File.log</Property>
	</Properties>
	<Appenders>
		<RollingFile name="log4j2File" fileName="${log-path}"
			filePattern="${log-path}/myexample-%d{yyyy-MM-dd}-%i.log">
			<PatternLayout>
				 <pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n</pattern>
			</PatternLayout>
			<Policies>
				<SizeBasedTriggeringPolicy size="1 KB" />
			</Policies>
			<DefaultRolloverStrategy max="4" />
		</RollingFile>
	</Appenders>
	<Loggers>
		<Logger name="nikitachizhik91" level="info" additivity="false">
			<appender-ref ref="log4j2File" level="info" />
		</Logger>
		<Root level="info" additivity="false">
			<AppenderRef ref="log4j2File" />
		</Root>
	</Loggers>
</Configuration>